<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:id="@+id/title"
        android:text="Datos de Contacto"
        android:textSize="24sp"
        android:padding="4dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datoName"
        android:hint="Name"
        android:textSize="21sp"
        android:padding="4dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datoPhone"
        android:hint="Phone"
        android:textSize="21sp"
        android:padding="4dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datoDescription"
        android:hint="Description"
        android:textSize="21sp"
        android:padding="4dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datoEmail"
        android:hint="Mail"
        android:textSize="21sp"
        android:padding="4dp">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datoDate"
        android:hint="Date"
        android:textSize="21sp"
        android:padding="4dp">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="12dp"
        android:id="@+id/bEditar"
        android:text="Editar">

    </Button>




</LinearLayout>